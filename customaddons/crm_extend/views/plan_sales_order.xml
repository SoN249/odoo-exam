<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="plan_sale_order_action" model="ir.actions.act_window">
        <field name="name">Plan Sale Order</field>
        <field name="res_model">plan.sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Plan Sale Order" id="plan_sale_order_menu" parent="sale.sale_menu_root"  action="plan_sale_order_action"/>

    <record id="plan_sale_order_form" model="ir.ui.view">
        <field name="name">Plan Sale Order Form</field>
        <field name="model">plan.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <button name="btn_new" type="object" string="New" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('new', 'send', 'approve','refuse'))]}" groups="crm_extend.group_staff_employee"/>
                     <button name="btn_send" type="object" string="Send" class="oe_highlight" attrs="{'invisible':[('state', 'in', ('send', 'approve','refuse')), ('check_send', '=', 'no')]}" groups="crm_extend.group_staff_employee"/>
                     <button name="btn_approve_confirm" type="object" string="Approve" class="oe_highlight" groups="crm_extend.group_staff_approver" attrs="{'invisible': [('state', 'in', ('approve','refuse'))]}"/>
                     <button name="btn_refuse_confirm" type="object" string="Refuse" class="oe_highlight" groups="crm_extend.group_staff_approver" attrs="{'invisible': [('state', 'in', ('approve','refuse'))]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                            <field name="name" attrs="{'readonly': [('state', 'in', ('send','approve','refuse'))]}"/>
                            <field name="infor_plan" attrs="{'readonly': [('state', 'in', ('send','approve','refuse'))]}"/>
                            <field name="quotation" attrs="{'readonly': [('state', 'in', ('send','approve','refuse'))]}"/>
                            <field name="check_send" invisible="1"/>
                   </group>
                    <notebook>
                        <page class="fa fa-users" string="Approver List">
                            <field name="approver_id" attrs="{'readonly': [('state', 'in', ('send','approve','refuse'))]}">
                                <tree editable="bottom">
                                    <field name="approver"/>
                                    <field name="approval_status"/>
                                     <button name="btn_approve" string="Approve" type="object" class="oe_highlight"
                                                groups="crm_extend.group_staff_approver"
                                                attrs="{'invisible': [('approval_status', 'in', ('refuse', 'approve'))]}"/>
                                        <button name="btn_refuse" string="Refuse" type="object" class="oe_highlight"
                                                groups="crm_extend.group_staff_approver"
                                                attrs="{'invisible': [('approval_status', 'in', ('refuse', 'approve'))]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="plan_sale_order_view_tree" model="ir.ui.view">
        <field name="name">Plan Sale Order List</field>
        <field name="model">plan.sale.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name ="quotation"/>
                <field name="infor_plan"/>
                <field name="approver"/>
            </tree>
        </field>
    </record>

</odoo>